{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "rootDir": "src",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "jsx": "react",
        "typeRoots": ["types", "../types"]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
